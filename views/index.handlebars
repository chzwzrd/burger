<img src="../public/assets/img/burger.png" alt="tiny bob holding his burger in a red and white checkered apron" />

<h1>Eat-Da-Burger!</h1>

<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li>
                {{this.burger_name}}

                <form method="POST" action="burgers/delete/{{this.id}}?_method=DELETE">
                    <input type="hidden" name="devoured" value="true" />
                    <button type="submit">Devour it!</button>
                </form>

                {{!-- {{> burgers/delete-burger}} --}}
            </li>
        {{/unless}}
    {{/each}}
</ul>

<form method="POST">
    <input type="text" name="burger" />
    <button type="submit">Submit</button>
</form>

<p>
    Enter a burger you want to eat,<br />
    then click "Submit"!
</p>